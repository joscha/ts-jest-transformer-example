{
  "name": "ts-jest-transformer-example",
  "version": "1.0.0",
  "main": "src/index.js",
  "license": "MIT",
  "scripts": {
    "test": "jest --no-cache"
  },
  "devDependencies": {
    "jest": "^19.0.2",
    "ts-jest": "^19.0.0",
    "typescript": "^2.2.1"
  },
  "jest": {
    "cacheDirectory": "./tmp",
    "moduleNameMapper": {
      "\\.(css)$": "<rootDir>/tools/stubProxy.ts"
    },
    "transform": {
      "\\.(svg)$": "<rootDir>/tools/fileTransformer.js",
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
